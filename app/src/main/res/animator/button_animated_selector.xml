<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<set>
			<objectAnimator
				android:propertyName="translationZ"
				android:valueTo="@dimen/offset_8"
				android:valueType="floatType"/>

			<objectAnimator
				android:propertyName="scaleX"
				android:valueTo="@string/button_animated_selector_pressed_scale"
				android:valueType="floatType"/>

			<objectAnimator
				android:propertyName="scaleY"
				android:valueTo="@string/button_animated_selector_pressed_scale"
				android:valueType="floatType"/>

		</set>
	</item>

	<item>
		<set>
			<objectAnimator
				android:propertyName="translationZ"
				android:valueTo="0dp"
				android:valueType="floatType"/>

			<objectAnimator
				android:propertyName="scaleX"
				android:valueTo="@string/button_animated_selector_default_scale"
				android:valueType="floatType"/>

			<objectAnimator
				android:propertyName="scaleY"
				android:valueTo="@string/button_animated_selector_default_scale"
				android:valueType="floatType"/>
		</set>
	</item>
</selector>